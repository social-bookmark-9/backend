                <maxHistory>30</maxHistory>
            </rollingPolicy>
        </appender>
 -->
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="INFO_LOG"/>
<!--             <appender-ref ref="WARN_LOG"/>
            <appender-ref ref="ERROR_LOG"/> -->
        </root>

    </springProfile>

</configuration>
